apiVersion: apps/v1
kind: Deployment
metadata:
  name: myapp-deployment
  labels:
    app: myapp
spec:
  replicas: 1
  selector:
    matchLabels:
      app: myapp
  template:
    metadata:
      labels:
        app: myapp
    spec:
      containers:
        - name: myapp
          image: nrt.ocir.io/nrcbpbtrtyz0/githubrepo:latest  # Update this to the latest image tag after the build
          ports:
            - containerPort: 80  # Assuming your PHP application listens on port 80
          env:
            - name: DEPLOYMENT_ENV
              value: "stage"  # You can set this based on your deployment environment
            - name: IMAGE_CREATED_BY
              value: "OCIDevOps"
      imagePullSecrets:
        - name: ocir-auth  # Ensure this secret exists for pulling images from OCI Registry
