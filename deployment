apiVersion: apps/v1
kind: Deployment
metadata:
  name: myapp-deployment
  labels:
    app: myapp
spec:
  replicas: 1
  progressDeadlineSeconds: 1200 
  selector:
    matchLabels:
      app: myapp
  template:
    metadata:
      labels:
        app: myapp
    spec:
      containers:
        - name: myapp
          image: nrt.ocir.io/nrcbpbtrtyz0/githubrepo:latest  
          ports:
            - containerPort: 80  
          env:
            - name: DEPLOYMENT_ENV
              value: "github_environment"  
            - name: IMAGE_CREATED_BY
              value: "OCIDevOps"
      imagePullSecrets:
        - name: ocir-auth  
